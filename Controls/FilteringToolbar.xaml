<UserControl x:Class="BookabookWPF.Controls.FilteringToolbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookabookWPF.Controls"
             MinWidth="800"
             mc:Ignorable="d">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <local:Searchbar x:Name="Searchbar" Grid.Row="0"/>
        <StackPanel x:Name="FilterDropDownPanel" Grid.Row="1" Orientation="Horizontal"/>
        <StackPanel x:Name="BreadcrumbPanel" Grid.Row="2" Orientation="Horizontal"/>


    </Grid>
</UserControl>
